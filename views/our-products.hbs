<!-- Start Our Products Area -->
<section class="our-products-area ptb-100">
  <div class="container">
    <div class="section-title text-center" style="margin-bottom: 50px;">
      <p style="color: #555; font-size: 16px;">{{data.subTitle}}</p>
    </div>

    <div class="row">
      {{#each data.products}}
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="product-card" style="background: #fff; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); padding: 32px; height: 100%; display: flex; flex-direction: column; transition: transform 0.3s ease, box-shadow 0.3s ease;">
            <div class="product-icon" style="width: 64px; height: 64px; background: linear-gradient(135deg, #6c5ce7 0%, #5b4cdb 100%); border-radius: 14px; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
              <i class="{{this.icon}}" style="font-size: 32px; color: #fff;"></i>
            </div>
            <h3 class="product-title" style="font-size: 20px; font-weight: 700; color: #1a1a2e; margin: 0 0 14px; line-height: 1.3;">
              {{this.title}}
            </h3>
            <p class="product-description" style="font-size: 15px; color: #555; line-height: 1.6; margin: 0 0 24px; flex: 1;">
              {{this.description}}
            </p>
            <a href="{{this.url}}" target="_blank" rel="noopener noreferrer" class="product-btn" style="display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; background: linear-gradient(135deg, #6c5ce7 0%, #5b4cdb 100%); color: #fff; border-radius: 10px; font-weight: 600; font-size: 14px; text-decoration: none; transition: all 0.3s ease;">
              <span>{{this.buttonText}}</span>
              <i class="bx bx-right-arrow-alt" style="font-size: 18px; flex-shrink: 0;"></i>
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
<!-- End Our Products Area -->

<style>
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(108, 92, 231, 0.15) !important;
  }
  .product-btn:hover {
    background: linear-gradient(135deg, #5b4cdb 0%, #4a3cc9 100%) !important;
    color: #fff !important;
    box-shadow: 0 6px 20px rgba(108, 92, 231, 0.4);
  }
</style>
