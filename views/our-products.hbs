<!-- Start Our Products Area -->
<section class="our-products-area ptb-100">
  <div class="container">
    <div class="section-title text-center" style="margin-bottom: 50px;">
      <p style="color: #555; font-size: 16px;">{{data.subTitle}}</p>
    </div>

    <div class="row">
      {{#each data.products}}
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="product-card product-card--mobile-center" style="background: #fff; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); padding: 32px; height: 100%; display: flex; flex-direction: column; transition: transform 0.3s ease, box-shadow 0.3s ease;">
            {{#if this.image}}
            <div class="product-image-wrap" style="margin: -32px -32px 20px -32px; border-radius: 16px 16px 0 0; overflow: hidden;">
              <img src="{{this.image}}" alt="{{this.title}}" class="product-image" style="width: 100%; height: 280px; object-fit: cover; display: block;" />
            </div>
            {{/if}}
            {{!-- <div class="product-icon product-card__icon" style="width: 64px; height: 64px; background: linear-gradient(135deg, #6c5ce7 0%, #5b4cdb 100%); border-radius: 14px; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
              <i class="{{this.icon}}" style="font-size: 32px; color: #fff;"></i>
            </div> --}}
            <h3 class="product-title product-card__title" style="font-size: 20px; font-weight: 700; color: #1a1a2e; margin: 0 0 14px; line-height: 1.3;">
              {{this.title}}
            </h3>
            <p class="product-description product-card__desc" style="font-size: 15px; color: #555; line-height: 1.6; margin: 0 0 24px; flex: 1;">
              {{this.description}}
            </p>
            <a href="{{this.url}}" class="product-btn product-card__btn">
              <span>{{this.buttonText}}</span>
              <i class="bx bx-right-arrow-alt" style="font-size: 18px; flex-shrink: 0;"></i>
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
<!-- End Our Products Area -->

<style>
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(108, 92, 231, 0.15) !important;
  }
  .product-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: linear-gradient(135deg, #86efac 0%, #4ade80 50%, #34d399 100%);
    color: #14532d;
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 12px;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 12px rgba(74, 222, 128, 0.25);
  }
  .product-btn:hover {
    background: linear-gradient(135deg, #4ade80 0%, #22c55e 50%, #16a34a 100%);
    color: #fff;
    border-color: transparent;
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.35);
    transform: translateY(-2px);
  }

  /* Mobile: center card content */
  @media (max-width: 767px) {
    .product-card--mobile-center {
      align-items: center;
      text-align: center;
    }
    .product-card--mobile-center .product-card__icon {
      margin-left: auto;
      margin-right: auto;
    }
    .product-card--mobile-center .product-card__title,
    .product-card--mobile-center .product-card__desc {
      text-align: center;
    }
    .product-card--mobile-center .product-card__btn {
      align-self: center;
    }
  }
</style>
