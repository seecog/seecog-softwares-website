<!-- Start Careers Area -->
<section class="careers-page-area ptb-100">
  <div class="container">
    <div class="careers-inner">
      <!-- Hero -->
      <div class="careers-hero dc-shadow">
        <h1>Careers at Seecog Softwares</h1>
        <p>Join a team building scalable web, mobile, cloud and AI solutions.</p>
        <div class="careers-hero-cta">
          <a href="#open-positions" class="default-btn"><i
              class="bx bx-briefcase"
            ></i>
            View Open Roles
            <span></span></a>
          <a href="#apply-form" class="optional-btn"><i
              class="bx bx-paper-plane"
            ></i>
            Apply Now</a>
        </div>
      </div>

      <!-- Why Join Us -->
      <div class="careers-section careers-why-join">
        <h2>Why Join Us</h2>
        <div class="benefits-grid">
          <div class="benefit-card dc-shadow">
            <i class="bx bx-trending-up"></i>
            <h4>Growth & Learning</h4>
            <p>Mentorship, hands-on projects, and skill development.</p>
          </div>
          <div class="benefit-card dc-shadow">
            <i class="bx bx-group"></i>
            <h4>Strong Team Culture</h4>
            <p>Collaborative environment with ownership and transparency.</p>
          </div>
          <div class="benefit-card dc-shadow">
            <i class="bx bx-bulb"></i>
            <h4>Meaningful Work</h4>
            <p>Work on real products and client solutions with impact.</p>
          </div>
        </div>
      </div>

      <!-- Open Positions -->
      <div class="careers-section careers-positions" id="open-positions">
        <h2>Open Positions</h2>
        <div class="positions-filters dc-shadow">
          <input
            type="text"
            id="positionSearch"
            class="filter-search"
            placeholder="Search by title or skills..."
            aria-label="Search positions"
          />
          <select
            id="filterDepartment"
            class="filter-select"
            aria-label="Filter by department"
          >
            <option value="">All Departments</option>
            <option value="Engineering">Engineering</option>
            <option value="Design">Design</option>
            <option value="Sales">Sales</option>
          </select>
          <select
            id="filterLocation"
            class="filter-select"
            aria-label="Filter by location"
          >
            <option value="">All Locations</option>
            <option value="Remote / Bengaluru">Remote / Bengaluru</option>
            <option value="Bengaluru">Bengaluru</option>
          </select>
          <select
            id="filterType"
            class="filter-select"
            aria-label="Filter by type"
          >
            <option value="">All Types</option>
            <option value="Full-time">Full-time</option>
            <option value="Intern / Full-time">Intern / Full-time</option>
          </select>
        </div>
        <div id="positionsList" class="positions-list">
          <!-- Filled by JS -->
        </div>
        <div id="noPositions" class="no-positions" hidden>
          <p>No positions match your filters. Try adjusting your search.</p>
        </div>
      </div>

      <!-- Hiring Process -->
      <div class="careers-section careers-process">
        <h2>Hiring Process</h2>
        <div class="process-steps">
          <div class="process-step dc-shadow">
            <span class="step-num">1</span>
            <h4>Apply</h4>
            <p>Submit your application with resume and details</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">2</span>
            <h4>Screen</h4>
            <p>Initial review and short phone/video screening</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">3</span>
            <h4>Interview</h4>
            <p>Technical and culture-fit interviews</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">4</span>
            <h4>Offer</h4>
            <p>Decision and offer discussion</p>
          </div>
        </div>
      </div>

      <!-- FAQ -->
      <div class="careers-section careers-faq">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-accordion dc-shadow">
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq1"
              id="faq1-btn"
            >
              <span>What is the typical hiring timeline?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq1"
              role="region"
              aria-labelledby="faq1-btn"
            >
              <p>From application to offer typically takes 2–3 weeks, depending
                on role and availability.</p>
            </div>
          </div>
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq2"
              id="faq2-btn"
            >
              <span>Do you offer remote work?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq2"
              role="region"
              aria-labelledby="faq2-btn"
            >
              <p>Yes. Most roles support remote or hybrid work. Location varies
                by role.</p>
            </div>
          </div>
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq3"
              id="faq3-btn"
            >
              <span>What benefits do you offer?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq3"
              role="region"
              aria-labelledby="faq3-btn"
            >
              <p>We offer competitive compensation, learning budget, flexible
                hours, and a supportive team culture.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Apply Form -->
      <div class="careers-section careers-apply" id="apply-form">
        <h2>Apply Now</h2>
        <form id="careersApplyForm" class="careers-apply-form dc-shadow">
          <div class="form-row">
            <div class="form-group">
              <label>Full Name <span>*</span></label>
              <input
                type="text"
                name="name"
                required
                placeholder="Your full name"
                id="careersName"
              />
            </div>
            <div class="form-group">
              <label>Email <span>*</span></label>
              <input
                type="email"
                name="email"
                required
                placeholder="you@example.com"
                id="careersEmail"
              />
              <span class="form-error" id="emailError" hidden></span>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Phone <span>*</span></label>
              <input
                type="tel"
                name="phone"
                required
                placeholder="+91 9876543210"
                id="careersPhone"
              />
              <span class="form-error" id="phoneError" hidden></span>
            </div>
            <div class="form-group">
              <label>Role Interested In <span>*</span></label>
              <select name="role" required id="careersRole">
                <option value="">Select a role</option>
                <option value="Frontend Developer">Frontend Developer</option>
                <option value="Backend Developer (Node.js)">Backend Developer
                  (Node.js)</option>
                <option value="UI/UX Designer">UI/UX Designer</option>
                <option value="Business Development Executive">Business
                  Development Executive</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label>Experience (years)</label>
              <input type="text" name="experience" placeholder="e.g. 2" />
            </div>
            <div class="form-group">
              <label>Portfolio / LinkedIn URL</label>
              <input
                type="url"
                name="portfolio"
                placeholder="https://linkedin.com/in/you"
              />
            </div>
          </div>
          <div class="form-group">
            <label>Resume Upload (PDF/DOC/DOCX, max 5MB)</label>
            <input
              type="file"
              name="resume"
              id="careersResume"
              accept=".pdf,.doc,.docx"
            />
            <span class="form-error" id="resumeError" hidden></span>
            <span class="file-name" id="resumeFileName"></span>
          </div>
          <div class="form-group">
            <label>Message <span>*</span></label>
            <textarea
              name="message"
              rows="5"
              required
              placeholder="Tell us about yourself and why you want to join..."
            ></textarea>
          </div>
          <button type="submit" class="default-btn" id="careersSubmitBtn">
            <i class="bx bx-paper-plane"></i>
            Submit Application
            <span></span>
          </button>
        </form>
      </div>

      <!-- Footer CTA -->
      <div class="careers-cta dc-shadow">
        <h3>Prefer email?</h3>
        <p>Send your resume to
          <a
            href="mailto:info@seecogsoftwares.com?subject=Application%20-%20Seecog%20Softwares"
          >info@seecogsoftwares.com</a>
          with the subject:
          <strong>Application - &lt;Role&gt;</strong>.</p>
      </div>
    </div>
  </div>
</section>

<!-- Toast -->
<div
  id="careersToast"
  class="careers-toast"
  role="status"
  aria-live="polite"
  hidden
></div>

<script>
  (function() { 'use strict'; var POSITIONS = [ { id: 'FE-01', title: 'Frontend
  Developer', department: 'Engineering', experience: '1–3 years', location:
  'Remote / Bengaluru', type: 'Full-time', skills: ['HTML', 'CSS', 'JavaScript',
  'React'], shortDescription: 'Build modern UI with strong performance and clean
