<!-- Start Careers Area -->
<section class="careers-page-area ptb-100">
  <div class="container">
    <div class="careers-inner">
      <!-- Hero -->
      <div class="careers-hero dc-shadow">
        <h1>Careers at Seecog Softwares</h1>
        <p>Join a team building scalable web, mobile, cloud and AI solutions.</p>
        <div class="careers-hero-cta">
          <a href="#open-positions" class="default-btn"><i
              class="bx bx-briefcase"
            ></i>
            View Open Roles
            <span></span></a>
        </div>
      </div>

      <!-- Why Join Us -->
      <div class="careers-section careers-why-join">
        <h2>Why Join Us</h2>
        <div class="benefits-grid">
          <div class="benefit-card dc-shadow">
            <i class="bx bx-trending-up"></i>
            <h4>Growth & Learning</h4>
            <p>Mentorship, hands-on projects, and skill development.</p>
          </div>
          <div class="benefit-card dc-shadow">
            <i class="bx bx-group"></i>
            <h4>Strong Team Culture</h4>
            <p>Collaborative environment with ownership and transparency.</p>
          </div>
          <div class="benefit-card dc-shadow">
            <i class="bx bx-bulb"></i>
            <h4>Meaningful Work</h4>
            <p>Work on real products and client solutions with impact.</p>
          </div>
        </div>
      </div>

      <!-- Open Positions -->
      <div class="careers-section careers-positions" id="open-positions">
        <h2>Open Positions</h2>
        <div class="positions-filters dc-shadow">
          <input
            type="text"
            id="positionSearch"
            class="filter-search"
            placeholder="Search by title or skills..."
            aria-label="Search positions"
          />
          <select
            id="filterDepartment"
            class="filter-select"
            aria-label="Filter by department"
          >
            <option value="">All Departments</option>
            <option value="Engineering">Engineering</option>
            <option value="Design">Design</option>
            <option value="Sales">Sales</option>
          </select>
          <select
            id="filterLocation"
            class="filter-select"
            aria-label="Filter by location"
          >
            <option value="">All Locations</option>
            <option value="Remote / Bengaluru">Remote / Bengaluru</option>
            <option value="Bengaluru">Bengaluru</option>
          </select>
          <select
            id="filterType"
            class="filter-select"
            aria-label="Filter by type"
          >
            <option value="">All Types</option>
            <option value="FULL_TIME">Full-time</option>
            <option value="PART_TIME">Part-time</option>
            <option value="CONTRACT">Contract</option>
            <option value="INTERN">Intern</option>
          </select>
        </div>
        <div id="positionsList" class="positions-list">
          {{#if data.jobs}}{{#each data.jobs}}
          <div class="position-card dc-shadow" data-job-id="{{this.id}}" data-title="{{this.title}}" data-department="{{this.department}}" data-location="{{this.location}}" data-type="{{this.job_type}}">
            <div class="position-info">
              <h4>{{this.title}}</h4>
              <p class="position-desc">{{this.description}}</p>
              <div class="position-meta">
                <span><i class="bx bx-map"></i> {{this.location}}</span>
                <span><i class="bx bx-briefcase"></i> {{this.job_type}}</span>
                {{#if this.department}}<span><i class="bx bx-building"></i> {{this.department}}</span>{{/if}}
              </div>
            </div>
            <button type="button" class="default-btn btn-sm careers-apply-btn" data-job-id="{{this.id}}" data-job-title="{{this.title}}" onclick="window.openCareersApplyModal(this); return false;">Apply</button>
          </div>
          {{/each}}{{else}}
          <div class="position-card dc-shadow no-jobs-msg">
            <div class="position-info">
              <h4>No open positions at the moment</h4>
              <p class="position-desc">We're always looking for talented people. Check back soon or send us your resume.</p>
            </div>
          </div>
          {{/if}}
        </div>
        <div id="noPositions" class="no-positions" hidden>
          <p>No positions match your filters. Try adjusting your search.</p>
        </div>
      </div>

      <!-- Hiring Process -->
      <div class="careers-section careers-process">
        <h2>Hiring Process</h2>
        <div class="process-steps">
          <div class="process-step dc-shadow">
            <span class="step-num">1</span>
            <h4>Apply</h4>
            <p>Submit your application with resume and details</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">2</span>
            <h4>Screen</h4>
            <p>Initial review and short phone/video screening</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">3</span>
            <h4>Interview</h4>
            <p>Technical and culture-fit interviews</p>
          </div>
          <div class="process-step dc-shadow">
            <span class="step-num">4</span>
            <h4>Offer</h4>
            <p>Decision and offer discussion</p>
          </div>
        </div>
      </div>

      <!-- FAQ -->
      <div class="careers-section careers-faq">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-accordion dc-shadow">
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq1"
              id="faq1-btn"
            >
              <span>What is the typical hiring timeline?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq1"
              role="region"
              aria-labelledby="faq1-btn"
            >
              <p>From application to offer typically takes 2â€“3 weeks, depending
                on role and availability.</p>
            </div>
          </div>
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq2"
              id="faq2-btn"
            >
              <span>Do you offer remote work?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq2"
              role="region"
              aria-labelledby="faq2-btn"
            >
              <p>Yes. Most roles support remote or hybrid work. Location varies
                by role.</p>
            </div>
          </div>
          <div class="faq-item">
            <button
              type="button"
              class="faq-question"
              aria-expanded="false"
              aria-controls="faq3"
              id="faq3-btn"
            >
              <span>What benefits do you offer?</span>
              <i class="bx bx-chevron-down"></i>
            </button>
            <div
              class="faq-answer"
              id="faq3"
              role="region"
              aria-labelledby="faq3-btn"
            >
              <p>We offer competitive compensation, learning budget, flexible
                hours, and a supportive team culture.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer CTA -->
      <div class="careers-cta dc-shadow">
        <h3>Prefer email?</h3>
        <p>Send your resume to
          <a
            href="mailto:info@seecogsoftwares.com?subject=Application%20-%20Seecog%20Softwares"
          >info@seecogsoftwares.com</a>
          with the subject:
          <strong>Application - &lt;Role&gt;</strong>.</p>
      </div>
    </div>
  </div>
</section>

<!-- Apply Modal -->
<div id="applyModal" class="careers-modal" aria-hidden="true">
  <div class="careers-modal-overlay"></div>
  <div class="careers-modal-content dc-shadow">
    <button type="button" class="careers-modal-close" aria-label="Close">&times;</button>
    <h3 id="applyModalTitle">Apply for this position</h3>
    <div id="applyModalError" class="careers-modal-error" hidden></div>
    <form id="careersApplyForm" class="careers-apply-form" method="post" action="/careers/apply" enctype="multipart/form-data">
      <input type="hidden" name="job_id" id="careersJobId" value="">
      <div class="form-row">
        <div class="form-group">
          <label>Full Name <span>*</span></label>
          <input type="text" name="full_name" required placeholder="Your full name" id="careersName" />
        </div>
        <div class="form-group">
          <label>Email <span>*</span></label>
          <input type="email" name="email" required placeholder="you@example.com" id="careersEmail" />
        </div>
      </div>
      <div class="form-row">
        <div class="form-group">
          <label>LinkedIn URL <span>*</span></label>
          <input type="url" name="linkedin_url" required placeholder="https://linkedin.com/in/you" />
        </div>
        <div class="form-group">
          <label>Portfolio URL (optional)</label>
          <input type="url" name="portfolio_url" placeholder="https://yourportfolio.com" />
        </div>
      </div>
      <div class="form-group">
        <label>Resume (PDF/DOC/DOCX, max 5MB) <span>*</span></label>
        <input type="file" name="resume" id="careersResume" accept=".pdf,.doc,.docx" required />
        <span class="file-name" id="resumeFileName"></span>
      </div>
      <button type="submit" class="default-btn" id="careersSubmitBtn">
        <i class="bx bx-paper-plane"></i>
        Submit Application
        <span></span>
      </button>
    </form>
  </div>
</div>

<!-- Toast -->
<div
  id="careersToast"
  class="careers-toast"
  role="status"
  aria-live="polite"
  hidden
></div>

<script>
(function() {
  window.openCareersApplyModal = function(btn) {
    if (!btn) return;
    var jobId = btn.getAttribute && btn.getAttribute('data-job-id');
    var jobTitle = btn.getAttribute && btn.getAttribute('data-job-title');
    var modal = document.getElementById('applyModal');
    var jobIdEl = document.getElementById('careersJobId');
    var titleEl = document.getElementById('applyModalTitle');
    var errEl = document.getElementById('applyModalError');
    if (jobIdEl) jobIdEl.value = jobId || '';
    if (titleEl) titleEl.textContent = 'Apply for: ' + (jobTitle || 'Position');
    if (errEl) { errEl.hidden = true; errEl.textContent = ''; }
    if (modal) {
      modal.classList.add('careers-modal-open');
      modal.setAttribute('aria-hidden', 'false');
    }
  };
  function filterPositions() {
    var search = (document.getElementById('positionSearch') || {}).value.toLowerCase() || '';
    var dept = (document.getElementById('filterDepartment') || {}).value || '';
    var loc = (document.getElementById('filterLocation') || {}).value || '';
    var typ = (document.getElementById('filterType') || {}).value || '';
    var cards = document.querySelectorAll('#positionsList .position-card');
    var visible = 0;
    cards.forEach(function(card) {
      var title = (card.getAttribute('data-title') || '').toLowerCase();
      var cardDept = card.getAttribute('data-department') || '';
      var cardLoc = card.getAttribute('data-location') || '';
      var cardTyp = card.getAttribute('data-type') || '';
      var matchSearch = !search || title.indexOf(search) >= 0;
      var matchDept = !dept || cardDept === dept;
      var matchLoc = !loc || cardLoc === loc;
      var matchTyp = !typ || cardTyp === typ;
      var show = matchSearch && matchDept && matchLoc && matchTyp;
      card.style.display = show ? '' : 'none';
      if (show) visible++;
    });
    var noPos = document.getElementById('noPositions');
    if (noPos) noPos.hidden = visible > 0;
  }
  function openModal(jobId, jobTitle) {
    var modal = document.getElementById('applyModal');
    var jobIdEl = document.getElementById('careersJobId');
    var titleEl = document.getElementById('applyModalTitle');
    var errEl = document.getElementById('applyModalError');
    if (jobIdEl) jobIdEl.value = jobId || '';
    if (titleEl) titleEl.textContent = 'Apply for: ' + (jobTitle || 'Position');
    if (errEl) { errEl.hidden = true; errEl.textContent = ''; }
    if (modal) { modal.classList.add('careers-modal-open'); modal.setAttribute('aria-hidden', 'false'); }
  }
  function closeModal() {
    var modal = document.getElementById('applyModal');
    var form = document.getElementById('careersApplyForm');
    if (modal) { modal.classList.remove('careers-modal-open'); modal.setAttribute('aria-hidden', 'true'); }
    if (form) form.reset();
    var fn = document.getElementById('resumeFileName');
    if (fn) fn.textContent = '';
  }
  function showToast(msg, isErr) {
    var t = document.getElementById('careersToast');
    if (!t) return;
    t.textContent = msg;
    t.className = 'careers-toast careers-toast-visible' + (isErr ? ' careers-toast-error' : '');
    t.hidden = false;
    setTimeout(function() { t.classList.remove('careers-toast-visible'); t.hidden = true; }, 4000);
  }
  function findApplyBtn(el) {
    while (el && el !== document.body) {
      if (el.classList && el.classList.contains('careers-apply-btn')) return el;
      el = el.parentElement;
    }
    return null;
  }
  function bindApplyButtons() {
    document.addEventListener('click', function(e) {
      var btn = findApplyBtn(e.target);
      if (btn) {
        e.preventDefault();
        e.stopPropagation();
        openModal(btn.getAttribute('data-job-id'), btn.getAttribute('data-job-title'));
      }
    }, true);
  }
  function initModal() {
    var modal = document.getElementById('applyModal');
    var overlay = modal && modal.querySelector('.careers-modal-overlay');
    var closeBtn = modal && modal.querySelector('.careers-modal-close');
    if (overlay) overlay.addEventListener('click', closeModal);
    if (closeBtn) closeBtn.addEventListener('click', closeModal);
  }
  function initForm() {
    var form = document.getElementById('careersApplyForm');
    if (!form) return;
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      var btn = document.getElementById('careersSubmitBtn');
      var errEl = document.getElementById('applyModalError');
      var jobId = document.getElementById('careersJobId').value;
      if (!jobId) { if (errEl) { errEl.textContent = 'Please select a job.'; errEl.hidden = false; } return; }
      var fd = new FormData(form);
      if (btn) { btn.disabled = true; btn.classList.add('careers-loading'); }
      if (errEl) { errEl.hidden = true; errEl.textContent = ''; }
      fetch('/careers/apply', { method: 'POST', body: fd, headers: { 'Accept': 'application/json' } })
        .then(function(r) { return r.json().then(function(d) { return { ok: r.ok, data: d }; }); })
        .then(function(result) {
          if (result.ok && result.data && result.data.success) {
            showToast('Application submitted successfully!');
            closeModal();
          } else {
            if (errEl) { errEl.textContent = (result.data && result.data.error) || 'Submission failed.'; errEl.hidden = false; }
          }
        })
        .catch(function() {
          if (errEl) { errEl.textContent = 'Network error. Please try again.'; errEl.hidden = false; }
        })
        .finally(function() {
          if (btn) { btn.disabled = false; btn.classList.remove('careers-loading'); }
        });
    });
    var resumeInput = document.getElementById('careersResume');
    var fileNameEl = document.getElementById('resumeFileName');
    if (resumeInput && fileNameEl) resumeInput.addEventListener('change', function() { fileNameEl.textContent = resumeInput.files[0] ? resumeInput.files[0].name : ''; });
  }
  function initFAQ() {
    document.querySelectorAll('.faq-question').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var expanded = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', !expanded);
        var target = document.getElementById(btn.getAttribute('aria-controls'));
        if (target) target.classList.toggle('faq-open', !expanded);
      });
    });
  }
  function init() {
    ['positionSearch','filterDepartment','filterLocation','filterType'].forEach(function(id) {
      var el = document.getElementById(id);
      if (el) {
        el.addEventListener('input', filterPositions);
        el.addEventListener('change', filterPositions);
      }
    });
    bindApplyButtons();
    initModal();
    initForm();
    initFAQ();
    filterPositions();
    var qs = new URLSearchParams(window.location.search);
    if (qs.get('success')) showToast(decodeURIComponent(qs.get('success')));
    if (qs.get('error')) showToast(decodeURIComponent(qs.get('error')), true);
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

