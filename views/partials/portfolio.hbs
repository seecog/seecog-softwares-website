<!-- Start Portfolio Area -->
<section class="portfolio-page-area ptb-100">
    <div class="container">
        <div class="section-title">
            <h2>Our <span>Portfolio</span></h2>
            <p>Showcasing innovative solutions that drive success for our clients</p>
        </div>

        {{#if data.projects}}
        <div class="portfolio-grid">
            {{#each data.projects}}
            <div class="portfolio-card-modern">
                <div class="portfolio-card-header">
                    {{#if img}}<img src="{{img}}" alt="{{title}}" loading="lazy">{{else}}<div class="portfolio-image-placeholder"><i class='bx bx-image'></i></div>{{/if}}
                </div>
                <div class="portfolio-card-body">
                    <h3>{{title}}</h3>
                    <p class="portfolio-description">{{desc}}</p>
                    {{#if modules}}
                    <ul class="portfolio-features">
                        {{#each modules}}
                        <li><i class='bx bx-check-circle'></i> {{this}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                    {{#if technology_used}}
                    <div class="portfolio-tech">
                        <p class="tech-stack-text">{{technology_used}}</p>
                    </div>
                    {{/if}}
                </div>
                <div class="portfolio-card-footer">
                    <a href="/contact" class="portfolio-link">Learn More <i class='bx bx-right-arrow-alt'></i></a>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="no-portfolio">
            <i class='bx bx-folder-open'></i>
            <h3>Portfolio Coming Soon</h3>
            <p>We're working on showcasing our amazing projects. Check back soon!</p>
    </div>
        {{/if}}
    </div>
</section>
<!-- End Portfolio Area -->
