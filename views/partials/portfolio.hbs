<!-- Start Portfolio Area -->
<section class="portfolio-page-area ptb-100">
    <div class="container">
        <div class="section-title">
            <h2>Our <span>Portfolio</span></h2>
            <p>Showcasing innovative solutions that drive success for our clients</p>
        </div>

        {{#if data.projects}}
        <div class="portfolio-grid">
            {{#each data.projects}}
            <div class="portfolio-card-modern" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="portfolio-card-image-wrapper">
                    <img src="{{img}}" alt="{{title}}" class="portfolio-image">
                    <div class="portfolio-overlay">
                        <div class="portfolio-overlay-content">
                            <span class="portfolio-number">#{{id}}</span>
                                <h3>{{title}}</h3>
                        </div>
                    </div>
                </div>
                <div class="portfolio-card-body">
                    <div class="portfolio-header">
                        <h3>{{title}}</h3>
                        <span class="portfolio-badge">Project {{id}}</span>
            </div>
                    <p class="portfolio-description">{{desc}}</p>
                    
                    {{#if modules}}
                    <div class="portfolio-modules">
                        <h4><i class='bx bx-list-check'></i> Key Modules</h4>
                        <ul class="module-list">
                                    {{#each modules}}
                            <li><i class='bx bx-check-circle'></i> {{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                    {{/if}}
                    
                    {{#if technology_used}}
                    <div class="portfolio-tech">
                        <h4><i class='bx bx-code-alt'></i> Technology Stack</h4>
                        <p class="tech-stack-text">{{technology_used}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/each}}
    </div>
        {{else}}
        <div class="no-portfolio">
            <i class='bx bx-folder-open'></i>
            <h3>Portfolio Coming Soon</h3>
            <p>We're working on showcasing our amazing projects. Check back soon!</p>
    </div>
        {{/if}}
    </div>
</section>
<!-- End Portfolio Area -->
