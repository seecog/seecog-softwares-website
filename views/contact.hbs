<!-- Start Contact Area -->
<section class="contact-page-area ptb-100">
    <div class="container">
        <div class="section-title">
            <h2>Get In <span>Touch</span></h2>
            <p>Let's discuss how we can help transform your business</p>
        </div>

        <div class="contact-wrapper-modern">
            <!-- Contact Information -->
            <div class="contact-info-modern">
                <div class="contact-info-card">
                    <div class="info-icon">
                        <i class='bx bx-map'></i>
                    </div>
                    <h3>Our Location</h3>
                    <p>{{data.address}}</p>
                    <a href="https://www.google.com/maps/place/seecog+softwares/@12.950505,77.6074284,15z/data=!4m5!3m4!1s0x0:0xf12507f444878834!8m2!3d12.950505!4d77.6074284"
                       target="_blank"
                       class="info-link">
                        View on Map <i class='bx bx-right-arrow-alt'></i>
                    </a>
                </div>

                <div class="contact-info-card">
                    <div class="info-icon">
                        <i class='bx bx-envelope'></i>
                    </div>
                    <h3>Email Us</h3>
                    <p>{{data.email}}</p>
                    <a href="mailto:{{data.email}}" class="info-link">
                        Send Email <i class='bx bx-right-arrow-alt'></i>
                    </a>
                </div>

                <div class="contact-info-card">
                    <div class="info-icon">
                        <i class='bx bx-phone'></i>
                    </div>
                    <h3>Call Us</h3>
                    <p>{{data.contact}}</p>
                    <a href="tel:{{data.contact}}" class="info-link">
                        Call Now <i class='bx bx-right-arrow-alt'></i>
                    </a>
                </div>

                <div class="contact-features-modern">
                    <h4>Why Choose Us</h4>
                    <ul>
                        <li><i class='bx bx-check-circle'></i> Staff works from our offices in India</li>
                        <li><i class='bx bx-check-circle'></i> Scale up/down on demand</li>
                        <li><i class='bx bx-check-circle'></i> One time or ongoing projects</li>
                        <li><i class='bx bx-check-circle'></i> Hire based on skill set</li>
                    </ul>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form-modern">
                <div class="form-header">
                    <h3>Send Us a Message</h3>
                    <p>Fill out the form below and we'll get back to you within 24 hours</p>
                </div>

                <form id="contactForm" class="modern-contact-form">
                    <div class="form-row">
                        <div class="form-group-modern">
                            <label>Full Name <span>*</span></label>
                            <input type="text" name="name" required class="form-control-modern"
                                   placeholder="John Doe">
                        </div>

                        <div class="form-group-modern">
                            <label>Email Address <span>*</span></label>
                            <input type="email" name="email" required class="form-control-modern"
                                   placeholder="john@example.com">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group-modern">
                            <label>Phone Number <span>*</span></label>
                            <input type="tel" name="phone_number" required class="form-control-modern"
                                   placeholder="+91 8147614116">
                        </div>

                        <div class="form-group-modern">
                            <label>Subject <span>*</span></label>
                            <input type="text" name="msg_subject" required class="form-control-modern"
                                   placeholder="Project Inquiry">
                        </div>
                    </div>

                    <div class="form-group-modern">
                        <label>Message <span>*</span></label>
                        <textarea name="message" rows="6" required class="form-control-modern"
                                  placeholder="Tell us about your project..."></textarea>
                    </div>

                    <!-- WhatsApp Consent (MANDATORY) -->
                    <div class="form-group-modern whatsapp-consent">
                        <label class="consent-label">
                            <input type="checkbox" name="whatsapp_consent" required>
                            <span>
                                I agree to receive communication via
                                <strong>WhatsApp</strong> from
                                <strong>Seecog Softwares Pvt Ltd</strong>
                                regarding my inquiry.
                            </span>
                        </label>
                        <p class="consent-note">
                            By submitting this form, you agree to be contacted by
                                <strong>Seecog Softwares Pvt Ltd</strong> via
                                <strong>WhatsApp, phone, or email</strong>.
                                Please review our
                                <a href="https://sites.google.com/view/seecog-privacy-policy/home" target="_blank">
                                  Privacy Policy
                            </a>.
                    </p>

                    </div>

                    <button type="submit" class="default-btn modern-submit-btn">
                        <i class='bx bxs-paper-plane'></i>
                        Send Message
                        <span></span>
                    </button>

                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                </form>
            </div>
        </div>

        <!-- Social Media -->
        <div class="contact-social-modern">
            <h3>Connect With Us</h3>
            <ul class="social-modern">
                <li><a href="https://www.facebook.com/profile.php?id=61585373592616" target="_blank"><i class="bx bxl-facebook"></i></a></li>
                <li><a href="https://twitter.com/seecogsoftwares" target="_blank"><i class="bx bxl-twitter"></i></a></li>
                <li><a href="https://www.linkedin.com/company/seecog-softwares-pvt-ltd/" target="_blank"><i class="bx bxl-linkedin"></i></a></li>
                <li><a href="https://wa.me/917348820668" target="_blank"><i class="bx bxl-whatsapp"></i></a></li>
            </ul>
        </div>
    </div>
</section>
<!-- End Contact Area -->
