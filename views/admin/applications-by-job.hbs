<div class="admin-header">
  <h1>Applications: {{job.title}} <span style="font-size:16px;color:#666;font-weight:400;">({{applications.length}})</span></h1>
  <a href="/admin/jobs" class="btn btn-sm">‚Üê Back to Jobs</a>
</div>
{{#if flash.error}}<div class="flash-error">{{flash.error}}</div>{{/if}}
<div class="admin-card">
  {{#if applications.length}}
  <table>
    <thead>
      <tr>
        <th>Candidate</th>
        <th>Email</th>
        <th>LinkedIn</th>
        <th>Applied</th>
        <th>Resume</th>
      </tr>
    </thead>
    <tbody>
      {{#each applications}}
      <tr>
        <td>{{this.full_name}}</td>
        <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
        <td><a href="{{this.linkedin_url}}" target="_blank">View</a></td>
        <td>{{this.applied_at}}</td>
        <td><a href="/admin/applications/{{this.id}}/resume" target="_blank" class="btn btn-sm">View Resume</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p>No applications for this job yet.</p>
  {{/if}}
</div>
