<div class="admin-login-page" style="max-width: 400px; margin: 80px auto; padding: 40px; background: #fff; border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.08);">
  <h2 style="margin-bottom: 24px; color: #1a1a2e;">Admin Login</h2>
  {{#if error}}
  <div class="flash-error">{{error}}</div>
  {{/if}}
  <form method="POST" action="/admin/login">
    <div class="form-group">
      <label>Email</label>
      <input type="email" name="email" class="form-control" required placeholder="admin@example.com">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-admin" style="width: 100%;">Login</button>
  </form>
</div>
