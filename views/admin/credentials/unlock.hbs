<div class="admin-card">
  <h2><i class='bx bx-lock-alt'></i> Credentials Vault</h2>
  <p>Enter your vault password to view and edit your company credentials.</p>

  {{#if flash.success}}<div class="flash-success">{{flash.success}}</div>{{/if}}
  {{#if flash.error}}<div class="flash-error">{{flash.error}}</div>{{/if}}

  <form method="POST" action="/admin/credentials/unlock" style="max-width: 400px; margin-top: 20px;">
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" class="form-control" required autofocus placeholder="Enter vault password">
    </div>
    <button type="submit" class="btn btn-admin">Unlock</button>
    <a href="/admin/credentials/reset/request" class="btn btn-sm" style="margin-left: 12px;">Forgot password?</a>
  </form>
</div>
