<div class="admin-card">
  <h2><i class='bx bx-lock-open-alt'></i> Set New Password</h2>
  <p>Enter your new vault password.</p>

  {{#if flash.success}}<div class="flash-success">{{flash.success}}</div>{{/if}}
  {{#if flash.error}}<div class="flash-error">{{flash.error}}</div>{{/if}}

  <form method="POST" action="/admin/credentials/reset" style="max-width: 400px; margin-top: 20px;">
    <input type="hidden" name="token" value="{{token}}">
    <div class="form-group">
      <label for="password">New Password</label>
      <input type="password" id="password" name="password" class="form-control" required placeholder="Enter new password">
    </div>
    <button type="submit" class="btn btn-admin">Reset Password</button>
  </form>
</div>
