<div class="admin-partners-page">
  <div class="partners-page-header">
    <div class="partners-header-content">
      <h1>Partners &amp; Clients</h1>
      <p>Manage client logos displayed on the <a href="/partners" target="_blank">Partners page</a></p>
    </div>
  </div>

  {{#if flash.success}}
  <div class="partners-alert partners-alert--success">
    <i class='bx bx-check-circle'></i>
    <span>{{flash.success}}</span>
  </div>
  {{/if}}
  {{#if flash.error}}
  <div class="partners-alert partners-alert--error">
    <i class='bx bx-error-circle'></i>
    <span>{{flash.error}}</span>
  </div>
  {{/if}}

  <div class="partners-upload-card">
    <div class="partners-upload-header">
      <div class="partners-upload-icon">
        <i class='bx bx-cloud-upload'></i>
      </div>
      <h2>Upload Partner Image</h2>
      <p>PNG, JPG, GIF, WEBP or SVG. Max 2MB. Recommended: 200Ã—80px or similar for best display.</p>
    </div>
    <form class="partners-upload-form" method="POST" action="/admin/partners/upload" enctype="multipart/form-data">
      <div class="partners-upload-dropzone" id="dropzone">
        <input type="file" name="image" id="partnerImage" accept="image/png,image/jpeg,image/jpg,image/gif,image/webp,image/svg+xml" required />
        <div class="partners-upload-placeholder">
          <i class='bx bx-image-add'></i>
          <span class="partners-upload-text">Drop image here or <strong>browse</strong></span>
          <span class="partners-upload-hint">Supports PNG, JPG, GIF, WEBP, SVG</span>
        </div>
        <div class="partners-upload-preview" id="preview" style="display:none;">
          <img id="previewImg" src="" alt="Preview" />
          <span class="partners-upload-filename" id="previewName"></span>
        </div>
      </div>
      <div class="partners-form-row">
        <div class="partners-form-group">
          <label for="partnerName">Partner Name <span class="partners-form-optional">(optional)</span></label>
          <input type="text" id="partnerName" name="name" placeholder="e.g. Acme Corp" />
        </div>
        <div class="partners-form-group partners-form-group--sm">
          <label for="displayOrder">Display Order</label>
          <input type="number" id="displayOrder" name="display_order" value="0" min="0" placeholder="0" />
        </div>
      </div>
      <button type="submit" class="partners-btn partners-btn--primary" id="submitBtn" disabled>
        <i class='bx bx-upload'></i>
        Upload Partner
      </button>
    </form>
  </div>

  <div class="partners-list-section">
    <div class="partners-list-header">
      <h2>Client Logos</h2>
      <span class="partners-list-count">{{partners.length}} client logo{{#unless (eq partners.length 1)}}s{{/unless}}</span>
    </div>

    {{#if partners.length}}
    <div class="partners-grid">
      {{#each partners}}
      <div class="partners-card" data-id="{{this.id}}">
        <div class="partners-card-media">
          <img src="{{this.image_url}}" alt="{{this.name}}" loading="lazy" />
        </div>
        <div class="partners-card-body">
          <span class="partners-card-name">{{this.name}}</span>
          <form method="POST" action="/admin/partners/{{this.id}}/delete" class="partners-delete-form" onsubmit="return confirm('Delete this partner logo?');">
            <button type="submit" class="partners-btn partners-btn--danger" title="Delete">
              <i class='bx bx-trash'></i>
              Delete
            </button>
          </form>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="partners-empty-state">
      <div class="partners-empty-icon">
        <i class='bx bx-images'></i>
      </div>
      <h3>No partner logos yet</h3>
      <p>Upload your first client logo above to display it on the Partners page.</p>
    </div>
    {{/if}}
  </div>
</div>

<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
  /* Partners Admin - World-class UI */
  .admin-partners-page {
    --partners-bg: #f8fafc;
    --partners-surface: #ffffff;
    --partners-border: #e2e8f0;
    --partners-text: #1e293b;
    --partners-text-muted: #64748b;
    --partners-accent: #6366f1;
    --partners-accent-hover: #4f46e5;
    --partners-success: #059669;
    --partners-danger: #dc2626;
    --partners-radius: 16px;
    --partners-radius-sm: 10px;
    --partners-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    --partners-shadow-lg: 0 12px 48px rgba(0, 0, 0, 0.08);
    font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .partners-page-header {
    margin-bottom: 28px;
  }

  .partners-header-content h1 {
    font-size: 28px;
    font-weight: 700;
    color: var(--partners-text);
    margin: 0 0 6px;
    letter-spacing: -0.02em;
  }

  .partners-header-content p {
    font-size: 15px;
    color: var(--partners-text-muted);
    margin: 0;
  }

  .partners-header-content a {
    color: var(--partners-accent);
    text-decoration: none;
    font-weight: 500;
  }

  .partners-header-content a:hover {
    text-decoration: underline;
  }

  .partners-alert {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 18px;
    border-radius: var(--partners-radius-sm);
    margin-bottom: 24px;
    font-size: 14px;
    font-weight: 500;
  }

  .partners-alert i {
    font-size: 22px;
    flex-shrink: 0;
  }

  .partners-alert--success {
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    color: #065f46;
    border: 1px solid rgba(5, 150, 105, 0.2);
  }

  .partners-alert--error {
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    color: #991b1b;
    border: 1px solid rgba(220, 38, 38, 0.2);
  }

  .partners-upload-card {
    background: var(--partners-surface);
    border-radius: var(--partners-radius);
    box-shadow: var(--partners-shadow);
    padding: 32px;
    margin-bottom: 32px;
    border: 1px solid var(--partners-border);
  }

  .partners-upload-header {
    text-align: center;
    margin-bottom: 28px;
  }

  .partners-upload-icon {
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, var(--partners-accent) 0%, #8b5cf6 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
    color: #fff;
    font-size: 28px;
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.35);
  }

  .partners-upload-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--partners-text);
    margin: 0 0 8px;
  }

  .partners-upload-header p {
    font-size: 14px;
    color: var(--partners-text-muted);
    margin: 0;
    max-width: 480px;
    margin-left: auto;
    margin-right: auto;
  }

  .partners-upload-dropzone {
    position: relative;
    border: 2px dashed var(--partners-border);
    border-radius: var(--partners-radius-sm);
    padding: 40px 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.25s ease;
    background: linear-gradient(180deg, #fafbfc 0%, #f1f5f9 100%);
    margin-bottom: 24px;
  }

  .partners-upload-dropzone:hover {
    border-color: var(--partners-accent);
    background: linear-gradient(180deg, #f5f3ff 0%, #ede9fe 100%);
  }

  .partners-upload-dropzone.drag-over {
    border-color: var(--partners-accent);
    background: linear-gradient(180deg, #ede9fe 0%, #ddd6fe 100%);
    transform: scale(1.01);
  }

  .partners-upload-dropzone input[type="file"] {
    position: absolute;
    inset: 0;
    opacity: 0;
    cursor: pointer;
    font-size: 0;
  }

  .partners-upload-placeholder {
    pointer-events: none;
  }

  .partners-upload-placeholder i {
    font-size: 48px;
    color: var(--partners-accent);
    display: block;
    margin-bottom: 12px;
    opacity: 0.9;
  }

  .partners-upload-text {
    font-size: 16px;
    color: var(--partners-text);
    display: block;
    margin-bottom: 4px;
  }

  .partners-upload-text strong {
    color: var(--partners-accent);
    font-weight: 600;
  }

  .partners-upload-hint {
    font-size: 13px;
    color: var(--partners-text-muted);
  }

  .partners-upload-preview {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .partners-upload-preview img {
    max-width: 180px;
    max-height: 80px;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  }

  .partners-upload-filename {
    font-size: 13px;
    color: var(--partners-text-muted);
  }

  .partners-form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .partners-form-group {
    flex: 1;
    min-width: 200px;
  }

  .partners-form-group--sm {
    flex: 0 0 120px;
    min-width: 100px;
  }

  .partners-form-group label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: var(--partners-text);
    margin-bottom: 8px;
  }

  .partners-form-optional {
    font-weight: 400;
    color: var(--partners-text-muted);
  }

  .partners-form-group input {
    width: 100%;
    padding: 12px 14px;
    border: 1px solid var(--partners-border);
    border-radius: 10px;
    font-size: 15px;
    font-family: inherit;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .partners-form-group input:focus {
    outline: none;
    border-color: var(--partners-accent);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
  }

  .partners-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    font-size: 15px;
    font-weight: 600;
    font-family: inherit;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .partners-btn--primary {
    background: linear-gradient(135deg, var(--partners-accent) 0%, #8b5cf6 100%);
    color: #fff;
    box-shadow: 0 4px 14px rgba(99, 102, 241, 0.4);
  }

  .partners-btn--primary:hover:not(:disabled) {
    background: linear-gradient(135deg, var(--partners-accent-hover) 0%, #7c3aed 100%);
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.45);
  }

  .partners-btn--primary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .partners-btn--danger {
    background: transparent;
    color: var(--partners-danger);
    border: 1px solid rgba(220, 38, 38, 0.3);
    padding: 8px 14px;
    font-size: 13px;
  }

  .partners-btn--danger:hover {
    background: #fef2f2;
    border-color: var(--partners-danger);
  }

  .partners-list-section {
    background: var(--partners-surface);
    border-radius: var(--partners-radius);
    box-shadow: var(--partners-shadow);
    padding: 28px;
    border: 1px solid var(--partners-border);
  }

  .partners-list-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 12px;
  }

  .partners-list-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: var(--partners-text);
    margin: 0;
  }

  .partners-list-count {
    font-size: 14px;
    color: var(--partners-text-muted);
    background: var(--partners-bg);
    padding: 6px 12px;
    border-radius: 20px;
  }

  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
  }

  .partners-card {
    background: var(--partners-bg);
    border-radius: var(--partners-radius-sm);
    overflow: hidden;
    border: 1px solid var(--partners-border);
    transition: all 0.25s ease;
    display: flex;
    flex-direction: column;
  }

  .partners-card:hover {
    border-color: var(--partners-accent);
    box-shadow: 0 8px 24px rgba(99, 102, 241, 0.12);
  }

  .partners-card-media {
    padding: 24px;
    min-height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .partners-card-media img {
    max-width: 100%;
    max-height: 80px;
    object-fit: contain;
    filter: grayscale(30%);
    transition: filter 0.25s;
  }

  .partners-card:hover .partners-card-media img {
    filter: grayscale(0);
  }

  .partners-card-body {
    padding: 16px;
    border-top: 1px solid var(--partners-border);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .partners-card-name {
    font-size: 14px;
    color: var(--partners-text);
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .partners-card-name:empty::before,
  .partners-card-name:empty {
    font-style: italic;
    color: var(--partners-text-muted);
  }

  .partners-delete-form {
    flex-shrink: 0;
  }

  .partners-empty-state {
    text-align: center;
    padding: 60px 24px;
  }

  .partners-empty-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
  }

  .partners-empty-icon i {
    font-size: 40px;
    color: var(--partners-text-muted);
  }

  .partners-empty-state h3 {
    font-size: 18px;
    font-weight: 600;
    color: var(--partners-text);
    margin: 0 0 8px;
  }

  .partners-empty-state p {
    font-size: 14px;
    color: var(--partners-text-muted);
    margin: 0;
  }

  @media (max-width: 600px) {
    .partners-upload-card,
    .partners-list-section {
      padding: 20px;
    }

    .partners-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
(function() {
  var dropzone = document.getElementById('dropzone');
  var fileInput = document.getElementById('partnerImage');
  var preview = document.getElementById('preview');
  var previewImg = document.getElementById('previewImg');
  var previewName = document.getElementById('previewName');
  var placeholder = dropzone.querySelector('.partners-upload-placeholder');
  var submitBtn = document.getElementById('submitBtn');

  function showPreview(file) {
    if (!file || !file.type.startsWith('image/')) return;
    var reader = new FileReader();
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      previewName.textContent = file.name;
      placeholder.style.display = 'none';
      preview.style.display = 'flex';
      submitBtn.disabled = false;
    };
    reader.readAsDataURL(file);
  }

  function clearPreview() {
    previewImg.src = '';
    previewName.textContent = '';
    placeholder.style.display = '';
    preview.style.display = 'none';
    fileInput.value = '';
    submitBtn.disabled = true;
  }

  fileInput.addEventListener('change', function() {
    if (this.files && this.files[0]) showPreview(this.files[0]);
    else clearPreview();
  });

  dropzone.addEventListener('dragover', function(e) {
    e.preventDefault();
    this.classList.add('drag-over');
  });

  dropzone.addEventListener('dragleave', function() {
    this.classList.remove('drag-over');
  });

  dropzone.addEventListener('drop', function(e) {
    e.preventDefault();
    this.classList.remove('drag-over');
    var files = e.dataTransfer && e.dataTransfer.files;
    if (files && files[0]) {
      fileInput.files = files;
      showPreview(files[0]);
    }
  });

  document.querySelector('.partners-upload-form').addEventListener('submit', function() {
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<i class="bx bx-loader-alt bx-spin"></i> Uploading...';
  });
})();
</script>
