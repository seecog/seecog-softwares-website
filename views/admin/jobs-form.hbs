<div class="admin-header">
  <h1>{{#if job}}Edit Job{{else}}New Job{{/if}}</h1>
  <a href="/admin/jobs" class="btn btn-sm">‚Üê Back</a>
</div>
{{#if flash.error}}<div class="flash-error">{{flash.error}}</div>{{/if}}
<div class="admin-card">
  <form method="POST" action="{{#if job}}/admin/jobs/{{job.id}}{{else}}/admin/jobs{{/if}}">
    <div class="form-group">
      <label>Title *</label>
      <input type="text" name="title" class="form-control" required value="{{job.title}}">
    </div>
    <div class="form-group">
      <label>Department</label>
      <input type="text" name="department" class="form-control" value="{{job.department}}" placeholder="e.g. Engineering">
    </div>
    <div class="form-group">
      <label>Location</label>
      <input type="text" name="location" class="form-control" value="{{job.location}}" placeholder="e.g. Remote / Bengaluru">
    </div>
    <div class="form-group">
      <label>Job Type</label>
      <select name="job_type" class="form-control">
        <option value="FULL_TIME" {{#if job}}{{#if (eq job.job_type "FULL_TIME")}}selected{{/if}}{{/if}}>Full-time</option>
        <option value="PART_TIME" {{#if job}}{{#if (eq job.job_type "PART_TIME")}}selected{{/if}}{{/if}}>Part-time</option>
        <option value="CONTRACT" {{#if job}}{{#if (eq job.job_type "CONTRACT")}}selected{{/if}}{{/if}}>Contract</option>
        <option value="INTERN" {{#if job}}{{#if (eq job.job_type "INTERN")}}selected{{/if}}{{/if}}>Intern</option>
      </select>
    </div>
    <div class="form-group">
      <label>Description</label>
      <textarea name="description" class="form-control" rows="6">{{job.description}}</textarea>
    </div>
    <div class="form-group">
      <label>Status</label>
      <select name="status" class="form-control">
        <option value="DRAFT" {{#if job}}{{#if (eq job.status "DRAFT")}}selected{{/if}}{{else}}selected{{/if}}>Draft</option>
        <option value="PUBLISHED" {{#if job}}{{#if (eq job.status "PUBLISHED")}}selected{{/if}}{{/if}}>Published</option>
        <option value="CLOSED" {{#if job}}{{#if (eq job.status "CLOSED")}}selected{{/if}}{{/if}}>Closed</option>
      </select>
    </div>
    <button type="submit" class="btn btn-admin">Save</button>
  </form>
</div>
