<!-- Start Partners Area -->
<section class="partners-page-area ptb-100">
  <div class="container">
    <div class="partners-inner">
      <!-- Hero -->
      <div class="partners-hero">
        <h1>Partners &amp; Clients</h1>
        <p>Collaborations that help us deliver reliable, scalable solutions.</p>
        <div class="partners-hero-cta">
          <a href="#clients-section" class="default-btn"><i
              class="bx bx-briefcase"
            ></i>
            Our Clients
            <span></span></a>
          <a href="/contact" class="optional-btn"><i
              class="bx bx-paper-plane"
            ></i>
            Get In Touch</a>
        </div>
      </div>

      <!-- Trust Strip -->
      <div class="partners-trust-strip" id="trust-strip">
        <h2>What You Can Expect</h2>
        <ul class="trust-bullets">
          <li><i class="bx bx-check-circle"></i>
            Clear communication &amp; documentation</li>
          <li><i class="bx bx-check-circle"></i>
            On-time delivery with milestones</li>
          <li><i class="bx bx-check-circle"></i>
            Quality assurance &amp; support</li>
        </ul>
      </div>

      <!-- Clients Grid -->
      <div class="partners-section" id="clients-section">
        <h2>Clients We Work With</h2>
        {{#if data.partners.length}}
        <div class="clients-logos-grid">
          {{#each data.partners}}
          <div class="single-partner-logo"><img
              src="{{this.image_url}}"
              alt="{{this.name}}"
              loading="lazy"
            /></div>
          {{/each}}
        </div>
        {{else}}
        <div class="clients-logos-placeholder">
          <p>Our valued client partnerships will be showcased here.</p>
          <a href="/contact" class="default-btn"><i class="bx bx-paper-plane"></i> Partner With Us <span></span></a>
        </div>
        {{/if}}
      </div>

      <!-- Technology & Delivery Partners -->
      <div class="partners-section partners-tech">
        <h2>Technology &amp; Delivery Partners</h2>
        <div class="tech-partners-grid">
          <div class="tech-partner-card">
            <i class="bx bx-cloud"></i>
            <h4>Cloud Providers</h4>
            <p>AWS / Azure / GCP</p>
          </div>
          <div class="tech-partner-card">
            <i class="bx bx-message-dots"></i>
            <h4>Messaging &amp; Communication</h4>
            <p>WhatsApp / Email</p>
          </div>
          <div class="tech-partner-card">
            <i class="bx bx-credit-card"></i>
            <h4>Payments &amp; Billing</h4>
            <p>Integrated solutions</p>
          </div>
          <div class="tech-partner-card">
            <i class="bx bx-bar-chart-alt"></i>
            <h4>Analytics &amp; Monitoring</h4>
            <p>Data-driven insights</p>
          </div>
        </div>
      </div>

      <!-- Selected Work -->
      <div class="partners-section partners-case-studies">
        <h2>Selected Work</h2>
        {{#if data.selectedProjects}}
          <div class="case-studies-grid">
            {{#each data.selectedProjects}}
              <a href="/portfolio" class="case-study-card">
                <div class="case-study-img">
                  <img src="{{img}}" alt="{{title}}" />
                </div>
                <div class="case-study-content">
                  <h4>{{title}}</h4>
                  <p>{{desc}}</p>
                  <span class="case-study-link">View Portfolio
                    <i class="bx bx-right-arrow-alt"></i></span>
                </div>
              </a>
            {{/each}}
          </div>
        {{else}}
          <div class="case-studies-placeholder">
            <p>Explore our portfolio of successful projects.</p>
            <a href="/portfolio" class="default-btn"><i
                class="bx bx-folder"
              ></i>
              View Portfolio
              <span></span></a>
          </div>
        {{/if}}
      </div>

      <!-- CTA -->
      <div class="partners-cta">
        <h3>Want to Partner With Us?</h3>
        <p>Let's discuss collaboration opportunities and delivery models.</p>
        <div class="partners-cta-buttons">
          <a href="/contact" class="default-btn"><i
              class="bx bx-paper-plane"
            ></i>
            Contact Us
            <span></span></a>
          <a href="/portfolio" class="optional-btn"><i class="bx bx-folder"></i>
            View Portfolio</a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
(function() {
  document.querySelectorAll('a[href^="#"]').forEach(function(a) {
    var href = a.getAttribute('href');
    if (href === '#') return;
    a.addEventListener('click', function(e) {
      var target = document.querySelector(href);
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });
})();
</script>
<!-- End Partners Area -->