<script>
(function() {
  'use strict';
  function showToast(msg) {
    var t = document.getElementById('copyToast');
    if (!t) return;
    var span = t.querySelector('span');
    if (span) span.textContent = msg || 'Link copied!';
    t.removeAttribute('hidden');
    t.classList.add('dc-toast-visible');
    clearTimeout(showToast._tid);
    showToast._tid = setTimeout(function() {
      t.classList.remove('dc-toast-visible');
      setTimeout(function() { t.setAttribute('hidden', ''); }, 300);
    }, 2500);
  }
  function escapeVCardValue(val) {
    if (!val) return '';
    return String(val).replace(/\\/g, '\\\\').replace(/\n/g, '\\n').replace(/,/g, '\\,').replace(/;/g, '\\;');
  }
  function buildVCard(o) {
    var lines = ['BEGIN:VCARD', 'VERSION:3.0'];
    if (o.fullName) lines.push('FN:' + escapeVCardValue(o.fullName));
    if (o.org) lines.push('ORG:' + escapeVCardValue(o.org));
    if (o.email) lines.push('EMAIL;TYPE=INTERNET:' + escapeVCardValue(o.email));
    if (o.phone) lines.push('TEL;TYPE=WORK,CELL:' + escapeVCardValue(o.phone));
    var street = escapeVCardValue(o.address || ''), city = escapeVCardValue(o.city || ''), state = escapeVCardValue(o.state || ''), postal = escapeVCardValue(o.postalCode || ''), country = escapeVCardValue(o.country || '');
    if (street || city || state || postal || country) lines.push('ADR;TYPE=WORK:;;' + street + ';' + city + ';' + state + ';' + postal + ';' + country);
    if (o.url) lines.push('URL:' + escapeVCardValue(o.url));
    lines.push('END:VCARD');
    return lines.join('\r\n');
  }
  function triggerDownload(href, filename) {
    var a = document.createElement('a');
    a.href = href;
    a.download = filename || 'Seecog-Softwares.vcf';
    a.setAttribute('download', a.download);
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
  }
  function handleSaveVCard(e) {
    if (e) e.preventDefault();
    showToast('Downloading vCard...');
    var section = document.getElementById('digital-card-section');
    if (!section) {
      showToast('Error: Page not ready. Please refresh.');
      return;
    }
    var company = section.getAttribute('data-vcf-company') || 'Seecog Softwares Pvt Ltd';
    var email = section.getAttribute('data-vcf-email') || 'info@seecogsoftwares.com';
    var phone = (section.getAttribute('data-vcf-phone') || '+917625067691').replace(/\s/g, '');
    var url = section.getAttribute('data-vcf-website') || 'https://seecogsoftwares.com';
    var fullAddr = section.getAttribute('data-vcf-address') || 'Site No. 26, Prestige Cube Building, Laskar Hosur Rd, Adugodi, Koramangala, Bengaluru, Karnataka 560030, India';
    var parts = fullAddr.split(',').map(function(p) { return p.trim(); });
    var street = parts.length >= 4 ? parts.slice(0, -3).join(', ') : fullAddr;
    var city = parts.length >= 3 ? parts[parts.length - 3] : '';
    var statePostal = parts.length >= 2 ? parts[parts.length - 2] : '';
    var country = parts.length >= 1 ? parts[parts.length - 1] : 'India';
    var statePostalSplit = statePostal.split(/\s+/);
    var state = statePostalSplit[0] || '';
    var postalCode = statePostalSplit[1] || '560030';
    var data = { fullName: company, org: company, email: email, phone: phone, address: street, city: city, state: state, postalCode: postalCode, country: country, url: url };
    var vcf = buildVCard(data);
    var ok = false;
    try {
      var blob = new Blob([vcf], { type: 'text/vcard;charset=utf-8' });
      var blobUrl = URL.createObjectURL(blob);
      triggerDownload(blobUrl, 'Seecog-Softwares.vcf');
      setTimeout(function() { URL.revokeObjectURL(blobUrl); }, 2000);
      ok = true;
    } catch (err) {
      try {
        var dataUri = 'data:text/vcard;charset=utf-8,' + encodeURIComponent(vcf);
        triggerDownload(dataUri, 'Seecog-Softwares.vcf');
        ok = true;
      } catch (e2) {}
    }
    setTimeout(function() {
      showToast(ok ? 'vCard downloaded! Check your Downloads folder.' : 'Download failed. Please try again.');
    }, 600);
  }
  function copyLink(e) {
    if (e) e.preventDefault();
    var url = window.location.href;
    if (navigator.clipboard && navigator.clipboard.writeText) {
      navigator.clipboard.writeText(url).then(function() { showToast('Link copied!'); }).catch(function() { fallbackCopy(url); });
    } else {
      fallbackCopy(url);
    }
  }
  function fallbackCopy(text) {
    var ta = document.createElement('textarea');
    ta.value = text;
    ta.setAttribute('readonly', '');
    ta.style.cssText = 'position:fixed;left:0;top:0;width:2em;height:2em;padding:0;border:none;outline:none;opacity:0;';
    document.body.appendChild(ta);
    ta.focus();
    ta.select();
    ta.setSelectionRange(0, text.length);
    var ok = false;
    try { ok = document.execCommand('copy'); } catch (e) {}
    document.body.removeChild(ta);
    showToast(ok ? 'Link copied!' : 'Copy failed. Please copy manually.');
  }
  function sharePage(e) {
    if (e) e.preventDefault();
    var title = 'Seecog Softwares - Digital Card';
    var url = window.location.href;
    if (navigator.share && typeof navigator.share === 'function') {
      navigator.share({ title: title, url: url, text: 'Check out Seecog Softwares' })
        .then(function() { showToast('Shared!'); })
        .catch(function(err) { if (err.name !== 'AbortError') copyLink(); });
    } else {
      copyLink();
    }
  }
  function generateAndSharePDF(e) {
    if (e) e.preventDefault();
    showToast('Generating PDF...');
    var cardEl = document.querySelector('.dc-right-wrapper');
    var shareBtn = document.getElementById('dcShareIconBtn');
    if (!cardEl) {
      showToast('Card not found. Please refresh.');
      return;
    }
    if (typeof html2canvas === 'undefined') {
      showToast('PDF libraries not loaded. Please refresh.');
      return;
    }
    var jspdfLib = (typeof jspdf !== 'undefined' && jspdf) || (typeof window !== 'undefined' && (window.jspdf || window.jsPDF));
    if (!jspdfLib) {
      showToast('PDF libraries not loaded. Please refresh.');
      return;
    }
    var shareDisplay = shareBtn ? shareBtn.style.display : '';
    if (shareBtn) shareBtn.style.display = 'none';
    cardEl.scrollIntoView({ behavior: 'instant', block: 'center' });
    setTimeout(function() {
      html2canvas(cardEl, { scale: 2, backgroundColor: '#f8f9fc', useCORS: true, logging: false })
        .then(function(canvas) {
          var dataUrl = canvas.toDataURL('image/png');
          if (shareBtn) shareBtn.style.display = shareDisplay;
          var img = new Image();
          img.onload = function() {
            var PdfConstructor = jspdfLib.jsPDF || jspdfLib;
            if (!PdfConstructor) { showToast('PDF library error.'); return; }
            var pdf = new PdfConstructor({ unit: 'mm', format: 'a4', orientation: 'portrait' });
            var pageW = pdf.internal.pageSize.getWidth();
            var pageH = pdf.internal.pageSize.getHeight();
            var margin = 15;
            var maxW = pageW - 2 * margin;
            var maxH = pageH - 2 * margin;
            var imgW = img.width;
            var imgH = img.height;
            var ratio = Math.min(maxW / imgW, maxH / imgH);
            var finalW = imgW * ratio;
            var finalH = imgH * ratio;
            var x = (pageW - finalW) / 2;
            var y = (pageH - finalH) / 2;
            pdf.addImage(dataUrl, 'PNG', x, y, finalW, finalH);
            pdf.save('seecog-digital-card.pdf');
            showToast('PDF saved to Downloads!');
          };
          img.src = dataUrl;
        })
        .catch(function(err) {
          if (shareBtn) shareBtn.style.display = shareDisplay;
          console.error('PDF generation failed:', err);
          showToast('PDF failed. Please try again.');
        });
    }, 400);
  }
  function initStickyBar() {
    var bar = document.getElementById('stickyActions');
    if (!bar) return;
    function onScroll() { bar.classList.toggle('dc-sticky-visible', window.scrollY > 350); }
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }
  function findParentWith(el, fn) {
    var n = el;
    while (n && n !== document) {
      if (fn(n)) return n;
      n = n.parentElement;
    }
    return null;
  }
  function init() {
    document.addEventListener('click', function(e) {
      var t = findParentWith(e.target, function(n) {
        return n.id === 'saveContactBtn' || n.id === 'dcSaveContactBtn' || (n.getAttribute && n.getAttribute('data-action') === 'save-vcard');
      });
      if (t) { e.preventDefault(); handleSaveVCard(e); return; }
      t = findParentWith(e.target, function(n) { return n.id === 'copyLinkBtn'; });
      if (t) { e.preventDefault(); copyLink(e); return; }
      t = findParentWith(e.target, function(n) { return n.id === 'shareBtn'; });
      if (t) { e.preventDefault(); sharePage(e); return; }
      t = findParentWith(e.target, function(n) { return n.id === 'dcShareIconBtn'; });
      if (t) { e.preventDefault(); generateAndSharePDF(e); }
    }, true);
    initStickyBar();
  }
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

